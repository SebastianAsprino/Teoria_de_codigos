<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Fragment+Mono:ital@0;1&display=swap');
	:root{
		background-color: var(--md-sys-color-background);
		--md-ref-typeface-brand: 'Fragment Mono';
		--md-ref-typeface-plain: system-ui;
		--md-sys-color-primary: rgb(143 74 80);
		--md-sys-color-surface-tint: rgb(143 74 80);
		--md-sys-color-on-primary: rgb(255 255 255);
		--md-sys-color-primary-container: rgb(255 218 219);
		--md-sys-color-on-primary-container: rgb(59 8 16);
		--md-sys-color-secondary: rgb(118 86 88);
		--md-sys-color-on-secondary: rgb(255 255 255);
		--md-sys-color-secondary-container: rgb(255 218 219);
		--md-sys-color-on-secondary-container: rgb(44 21 23);
		--md-sys-color-tertiary: rgb(119 89 48);
		--md-sys-color-on-tertiary: rgb(255 255 255);
		--md-sys-color-tertiary-container: rgb(255 221 179);
		--md-sys-color-on-tertiary-container: rgb(41 24 0);
		--md-sys-color-error: rgb(186 26 26);
		--md-sys-color-on-error: rgb(255 255 255);
		--md-sys-color-error-container: rgb(255 218 214);
		--md-sys-color-on-error-container: rgb(65 0 2);
		--md-sys-color-background: rgb(255 248 247);
		--md-sys-color-on-background: rgb(34 25 26);
		--md-sys-color-surface: rgb(255 248 247);
		--md-sys-color-on-surface: rgb(34 25 26);
		--md-sys-color-surface-variant: rgb(244 221 221);
		--md-sys-color-on-surface-variant: rgb(82 67 68);
		--md-sys-color-outline: rgb(133 115 115);
		--md-sys-color-outline-variant: rgb(215 193 194);
		--md-sys-color-shadow: rgb(0 0 0);
		--md-sys-color-scrim: rgb(0 0 0);
		--md-sys-color-inverse-surface: rgb(56 46 46);
		--md-sys-color-inverse-on-surface: rgb(255 237 237);
		--md-sys-color-inverse-primary: rgb(255 178 183);
		--md-sys-color-primary-fixed: rgb(255 218 219);
		--md-sys-color-on-primary-fixed: rgb(59 8 16);
		--md-sys-color-primary-fixed-dim: rgb(255 178 183);
		--md-sys-color-on-primary-fixed-variant: rgb(114 51 57);
		--md-sys-color-secondary-fixed: rgb(255 218 219);
		--md-sys-color-on-secondary-fixed: rgb(44 21 23);
		--md-sys-color-secondary-fixed-dim: rgb(230 189 190);
		--md-sys-color-on-secondary-fixed-variant: rgb(92 63 65);
		--md-sys-color-tertiary-fixed: rgb(255 221 179);
		--md-sys-color-on-tertiary-fixed: rgb(41 24 0);
		--md-sys-color-tertiary-fixed-dim: rgb(231 192 142);
		--md-sys-color-on-tertiary-fixed-variant: rgb(92 66 26);
		--md-sys-color-surface-dim: rgb(231 214 214);
		--md-sys-color-surface-bright: rgb(255 248 247);
		--md-sys-color-surface-container-lowest: rgb(255 255 255);
		--md-sys-color-surface-container-low: rgb(255 240 240);
		--md-sys-color-surface-container: rgb(252 234 234);
		--md-sys-color-surface-container-high: rgb(246 228 228);
		--md-sys-color-surface-container-highest: rgb(240 222 222);
	}
  html {
		font-family: var(var(--md-ref-typeface-brand););
    letter-spacing: -0.025rem;
  }

  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }


	body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

	*,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
  }
	
	p {
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
  }





	/* h1{ descartado para letras es color de fondo
		color: var(--md-sys-color-surface)
	} */
	h1,h2,h3,h4,h5,h6,p,a,li {
		font-family: var(--md-ref-typeface-brand);
	}

	h1,h2{
		color: var(--md-sys-color-on-surface)
	}
	h3{
		color: var(--md-sys-color-surface-variant)
	}
	h4,p{
		color: var(--md-sys-color-on-surface-variant)
	}





	@media (prefers-color-scheme: dark) {
  :root {
	--md-sys-color-primary: rgb(255 178 183);
  --md-sys-color-surface-tint: rgb(255 178 183);
  --md-sys-color-on-primary: rgb(86 29 36);
  --md-sys-color-primary-container: rgb(114 51 57);
  --md-sys-color-on-primary-container: rgb(255 218 219);
  --md-sys-color-secondary: rgb(230 189 190);
  --md-sys-color-on-secondary: rgb(68 41 43);
  --md-sys-color-secondary-container: rgb(92 63 65);
  --md-sys-color-on-secondary-container: rgb(255 218 219);
  --md-sys-color-tertiary: rgb(231 192 142);
  --md-sys-color-on-tertiary: rgb(67 44 6);
  --md-sys-color-tertiary-container: rgb(92 66 26);
  --md-sys-color-on-tertiary-container: rgb(255 221 179);
  --md-sys-color-error: rgb(255 180 171);
  --md-sys-color-on-error: rgb(105 0 5);
  --md-sys-color-error-container: rgb(147 0 10);
  --md-sys-color-on-error-container: rgb(255 218 214);
  --md-sys-color-background: rgb(26 17 18);
  --md-sys-color-on-background: rgb(240 222 222);
  --md-sys-color-surface: rgb(26 17 18);
  --md-sys-color-on-surface: rgb(240 222 222);
  --md-sys-color-surface-variant: rgb(82 67 68);
  --md-sys-color-on-surface-variant: rgb(215 193 194);
  --md-sys-color-outline: rgb(159 140 141);
  --md-sys-color-outline-variant: rgb(82 67 68);
  --md-sys-color-shadow: rgb(0 0 0);
  --md-sys-color-scrim: rgb(0 0 0);
  --md-sys-color-inverse-surface: rgb(240 222 222);
  --md-sys-color-inverse-on-surface: rgb(56 46 46);
  --md-sys-color-inverse-primary: rgb(143 74 80);
  --md-sys-color-primary-fixed: rgb(255 218 219);
  --md-sys-color-on-primary-fixed: rgb(59 8 16);
  --md-sys-color-primary-fixed-dim: rgb(255 178 183);
  --md-sys-color-on-primary-fixed-variant: rgb(114 51 57);
  --md-sys-color-secondary-fixed: rgb(255 218 219);
  --md-sys-color-on-secondary-fixed: rgb(44 21 23);
  --md-sys-color-secondary-fixed-dim: rgb(230 189 190);
  --md-sys-color-on-secondary-fixed-variant: rgb(92 63 65);
  --md-sys-color-tertiary-fixed: rgb(255 221 179);
  --md-sys-color-on-tertiary-fixed: rgb(41 24 0);
  --md-sys-color-tertiary-fixed-dim: rgb(231 192 142);
  --md-sys-color-on-tertiary-fixed-variant: rgb(92 66 26);
  --md-sys-color-surface-dim: rgb(26 17 18);
  --md-sys-color-surface-bright: rgb(65 55 55);
  --md-sys-color-surface-container-lowest: rgb(20 12 13);
  --md-sys-color-surface-container-low: rgb(34 25 26);
  --md-sys-color-surface-container: rgb(39 29 30);
  --md-sys-color-surface-container-high: rgb(49 40 40);
  --md-sys-color-surface-container-highest: rgb(61 50 51)
  }
}
</style>